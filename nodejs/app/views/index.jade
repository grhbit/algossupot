extends layout

block content
  div(ng-controller='AppCtrl')#wrapper
    nav(role='navigation' style='margin-bottom: 0').navbar.navbar-default.navbar-fixed-top
      div.navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.sidebar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Algossupot

      ul.nav.navbar-top-links.navbar-right
        span(ng-show='isAuthentication()')
          button(type='button' ng-click='signOut()').btn.btn-primary Sign out
        span(ng-hide='isAuthentication()')
          button(type='button' onclick='location.href="/join"').btn.btn-primary Sign up
          button(type='button' onclick='location.href="/login"').btn.btn-default Sign in

      div(role='navigation').navbar-default.navbar-static-side
        div.sidebar-collapse
          ul.nav
            li
              a(href='/') Dashboard
            li
              a(href='/users') Users
            li
              a(href='/problems') Problems
            li
              a(href='/submissions') Submissions

    div#page-wrapper
      div(ng-view).row

  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
